  {
    "rules": {
      "privateMessages": {
        ".read": true,
        ".write": false
      },
      ".write": "auth !== null",
      "users": {
        "$uid": {
          "privateMessage": {
            "requestedBy": {
              ".read": "$uid === auth.uid",
              ".write": "auth !== null"
            }
          },
          ".read": "auth !== null",
          ".write": "$uid === auth.uid"
        }
      },
      "rooms": {
        ".read": true,
        ".write": false
      },
      "preloadedBackgrounds": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
        "$backgroundId": {
          ".validate": "newData.hasChildren(['id', 'originalPath', 'thumbnailPath', 'uploadedAt', 'uploadedBy'])"
        }
      },
      "preloadedAvatars": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
        "$avatarId": {
          ".validate": "newData.hasChildren(['id', 'originalPath', 'miniPath', 'uploadedAt', 'uploadedBy'])"
        }
      },
      "feedback": {
        ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
        ".write": "auth != null",
        "$feedbackId": {
          ".validate": "newData.hasChildren(['fullName', 'email', 'title', 'description', 'createdAt'])"
        }
      },
      "surveys": {
        ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
        ".write": "auth != null",
        "$surveyId": {
          ".validate": "newData.hasChildren(['rating', 'userId', 'createdAt'])"
        }
      },
      "reports": {
        "users": {
          ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
          ".write": "auth != null",
          "$reportId": {
            ".validate": "newData.hasChildren(['reportedUserId', 'reportedBy', 'reason', 'description', 'createdAt'])"
          }
        },
        "rooms": {
          ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
          ".write": "auth != null",
          "$reportId": {
            ".validate": "newData.hasChildren(['reportedRoomId', 'reportedBy', 'reason', 'description', 'createdAt'])"
          }
        }
      },
      "userReports": {
        "$userId": {
          ".read": "$userId === auth.uid || (auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true)",
          ".write": "$userId === auth.uid"
        }
      }
    }
  }