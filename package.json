{
  "name": "toonstalk",
  "version": "0.20.4",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
    "release": "node scripts/release.js",
    "release:hotfix": "node scripts/release.js --hotfix"
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "firebaseui": "^6.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "pinia": "^2.1.7",
    "register-service-worker": "^1.7.2",
    "uuid": "^9.0.1",
    "vee-validate": "^4.15.1",
    "vue": "^3.3.11",
    "vue-i18n": "^9.8.0",
    "vue-ls": "^4.2.0",
    "vue-router": "^4.2.5",
    "vuetify": "^3.4.6",
    "yup": "^1.7.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-airbnb": "^6.0.0",
    "@vue/test-utils": "^2.4.3",
    "eslint": "^8.55.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-vue": "^9.19.2",
    "jsdom": "^23.0.1",
    "sass": "^1.69.5",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^1.0.3",
    "vite-plugin-vuetify": "^2.0.1",
    "vitest": "^1.0.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/airbnb"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "vitest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=8 <21"
  }
}
